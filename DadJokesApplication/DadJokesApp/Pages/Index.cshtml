@page
@model IndexModel
@{
    ViewData["Title"] = "Dad Jokes";
}

<h1>@ViewData["Title"]</h1>
<br/>
<h5> Available Total Jokes: @Model.JokesCount</h5> <br>

<h6> Note: You can see max 5 Jokes Randomly</h6>
<form method="post">
    <label for="jokesCount">Enter number of jokes:</label>
    <input type="number" id="jokesCount" name="EnteredJokesCount" min="1" max="Model.JokesCount.ToString()" value="1" />
    <button type="submit">Get Jokes</button>
</form>

@if (Model.Jokes != null)
{
     
    <table>
        <thead>
            <tr>
                <th>Number</th>
                <th>Joke</th>
                <th>PunchLine</th>
            </tr>
        </thead>
        <tbody>
            @{int i=0;}
            @foreach (var joke in Model.Jokes)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@joke.Setup</td>
                    <td>@joke.Punchline</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

